<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Operator:" />
            <ComboBox fx:id="operatorComboBox" />
            <Label text="Difficulty:" />
            <ComboBox fx:id="difficultyComboBox" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="problemLabel" text=" " />
            <TextField fx:id="answerTextField" alignment="CENTER" />
            <Button text="Submit" onAction="#handleSubmit" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" padding="10">
            <Label fx:id="scoreLabel" text="Score: 0" />
            <Label fx:id="timeLabel" text="Time: 60" />
        </HBox>
    </bottom>
</BorderPane>
